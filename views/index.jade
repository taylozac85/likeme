extends layout

block content
	script(type='text/javascript', src='/javascripts/homepage.js')
	div.body-container
		div.row-fluid
			div.span7
				div#discover-bar-container
					div.row-fluid
						div.span4
							p.search-label Type
							form.form-search
								input.input-medium(type="text", placeholder="Yoga")
						div.span4
							p.search-label Place
							form.form-search
								input.input-medium(type="text", placeholder="The World")
						div.span4
							a(href="discover")
								button.btn.btn-primary#search-discover(type="sbumit") Discover
				div.row-fluid
					div#search-results-container-inner
						div.discover-pic-container
							a(href="profile")
								img.search-pic(src="images/yoga13-crop.png")
								div.search-pic-label-container
									div.search-pic-label
										p.search-pic-name Yoga to the People
										p.search-pic-location San Francisco
						div.discover-pic-container#second
							a(href="profile")
								img.search-pic(src="images/yoga2-crop.png")
								div.search-pic-label-container
									div.search-pic-label
										p.search-pic-name The Pad Studios
										p.search-pic-location New York
						div.discover-pic-container
							a(href="profile")
								img.search-pic(src="images/yoga11-crop.png")
								div.search-pic-label-container
									div.search-pic-label
										p.search-pic-name Yoga to the People
										p.search-pic-location San Francisco
						div.discover-pic-container#second
							a(href="profile")
								img.search-pic(src="images/yoga4-crop.png")
								div.search-pic-label-container
									div.search-pic-label
										p.search-pic-name The Pad Studios
										p.search-pic-location New York
						div.discover-pic-container
							a(href="profile")
								img.search-pic(src="images/yoga5-crop.png")
								div.search-pic-label-container
									div.search-pic-label
										p.search-pic-name Satori Yoga
										p.search-pic-location San Francisco
						div.discover-pic-container#second
							a(href="profile")
